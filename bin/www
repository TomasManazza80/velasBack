#!/usr/bin/env node

/**
 * Module dependencies.
 */
var app = require("../app");
var debug = require("debug")("backend:server");
var http = require("http");
const { Server } = require("socket.io"); 
const { inicializarWhatsApp } = require("../main"); 

/**
 * Get port from environment and store in Express.
 */
var port = normalizePort(process.env.PORT || "3000");
app.set("port", port);

var { Sequelize } = require("../models/index");

/**
 * Create HTTP server.
 */
var server = http.createServer(app);

/**
 * Create Socket.io server.
 */
const io = new Server(server, {
  cors: {
    origin: "*", 
    methods: ["GET", "POST"]
  },
  transports: ['websocket', 'polling']
});

/**
 * INICIALIZACIÃ“N DE WHATSAPP
 * Lo movimos fuera de Sequelize.sync para que arranque de inmediato.
 */
console.log("-------------------------------------------");
console.log("ðŸš€ [System] Iniciando servicio de WhatsApp...");
inicializarWhatsApp(io); 

/**
 * Listen on provided port, on all network interfaces.
 */
Sequelize.sync()
  .then(() => {
    console.log("ðŸŸ¢ [Database] Base de datos sincronizada.");

    server.listen(port);
    server.on("error", onError);
    server.on("listening", onListening);
  })
  .catch((error) => {
    console.error("âŒ [Database] Error al sincronizar la base de datos:", error);
    // Intentamos arrancar el servidor de todos modos para que el Socket funcione
    server.listen(port);
  });

/**
 * Funciones de soporte (normalizePort, onError, onListening)
 */
function normalizePort(val) {
  var port = parseInt(val, 10);
  if (isNaN(port)) return val;
  if (port >= 0) return port;
  return false;
}

function onError(error) {
  if (error.syscall !== "listen") throw error;
  var bind = typeof port === "string" ? "Pipe " + port : "Port " + port;
  switch (error.code) {
    case "EACCES":
      console.error(bind + " requiere privilegios elevados.");
      process.exit(1);
      break;
    case "EADDRINUSE":
      console.error(bind + " ya estÃ¡ en uso.");
      process.exit(1);
      break;
    default:
      throw error;
  }
}

function onListening() {
  var addr = server.address();
  var bind = typeof addr === "string" ? "pipe " + addr : "port " + addr.port;
  console.log(`ðŸ“¡ [Server] Servidor escuchando en ${bind}`);
  console.log("-------------------------------------------");
}