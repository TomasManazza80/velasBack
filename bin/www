#!/usr/bin/env node

/**
 * Module dependencies.
 */
var app = require("../app");
var debug = require("debug")("backend:server");
var http = require("http");
const { Server } = require("socket.io"); // Importamos Socket.io [cite: 2]
const { inicializarWhatsApp } = require("../main"); // Importamos tu servicio de WhatsApp [cite: 2]

/**
 * Get port from environment and store in Express.
 */
var port = normalizePort(process.env.PORT || "3000"); // Render usarÃ¡ process.env.PORT 
app.set("port", port);

var { Sequelize } = require("../models/index");

/**
 * Create HTTP server.
 */
var server = http.createServer(app);

/**
 * Create Socket.io server.
 * Configuramos CORS y transportes para producciÃ³n.
 */
const io = new Server(server, {
  cors: {
    origin: "*", // Permite conexiones desde tu frontend 
    methods: ["GET", "POST"]
  },
  transports: ['websocket', 'polling'] // Mejora la estabilidad de la conexiÃ³n
});

/**
 * INICIALIZACIÃ“N DE SERVICIOS
 * Primero arrancamos WhatsApp para que el QR se genere lo antes posible.
 */
console.log("-------------------------------------------");
console.log("ðŸš€ [System] Iniciando servicio de WhatsApp...");
inicializarWhatsApp(io); // Le pasamos la instancia de 'io' 

/**
 * SincronizaciÃ³n de Base de Datos y arranque del servidor.
 */
Sequelize.sync()
  .then(() => {
    console.log("ðŸŸ¢ [Database] Base de datos sincronizada.");

    server.listen(port);
    server.on("error", onError);
    server.on("listening", onListening);
  })
  .catch((error) => {
    console.error("âŒ [Database] Error al sincronizar la base de datos:", error);
    // Aunque la DB falle, el servidor intenta mantenerse arriba para el socket
    server.listen(port); 
  });

/**
 * Normalize a port into a number, string, or false.
 */
function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    return val;
  }

  if (port >= 0) {
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */
function onError(error) {
  if (error.syscall !== "listen") {
    throw error;
  }

  var bind = typeof port === "string" ? "Pipe " + port : "Port " + port;

  switch (error.code) {
    case "EACCES":
      console.error(bind + " requiere privilegios elevados.");
      process.exit(1);
      break;
    case "EADDRINUSE":
      console.error(bind + " ya estÃ¡ en uso.");
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */
function onListening() {
  var addr = server.address();
  var bind = typeof addr === "string" ? "pipe " + addr : "port " + addr.port;
  debug("Listening on " + bind);
  console.log(`ðŸ“¡ [Server] Servidor escuchando en ${bind}`);
  console.log("-------------------------------------------");
}